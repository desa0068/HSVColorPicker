<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.desa0068.hsvcolorpicker.MainActivity">

    <TextView
        android:id="@+id/colorSwatch"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/htitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorSwatch"
        android:layout_marginTop="40dp"
        android:text="@string/huetitle"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/huesb"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/htitle"
        android:background="@drawable/hue_seekbar" />

    <TextView
        android:id="@+id/stitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/huesb"
        android:layout_marginTop="20dp"
        android:text="@string/saturationtitle"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/satsb"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/stitle"
        android:background="@drawable/saturation_seekbar" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/satsb"
        android:layout_marginTop="20dp"
        android:text="@string/valtitle"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/valuesb"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/value"
        android:background="@drawable/value_seekbar" />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valuesb"
        android:layout_marginTop="35dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/blackButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/black"></Button>

            <Button
                android:id="@+id/redButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/red"></Button>

            <Button
                android:id="@+id/limeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/lime"></Button>

            <Button
                android:id="@+id/blueButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/blue"></Button>

            <Button
                android:id="@+id/yellowButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/yellow"></Button>

            <Button
                android:id="@+id/cyanButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/cyan"></Button>

            <Button
                android:id="@+id/magentaButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/magenta"></Button>

            <Button
                android:id="@+id/silverButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/silver"></Button>

            <Button
                android:id="@+id/grayButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/maroonButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/maroon"></Button>

            <Button
                android:id="@+id/oliveButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/olive"></Button>

            <Button
                android:id="@+id/greenButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/green"></Button>

            <Button
                android:id="@+id/purpleButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/purple"></Button>

            <Button
                android:id="@+id/tealButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/teal"></Button>

            <Button
                android:id="@+id/navyButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/navy"></Button>

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
